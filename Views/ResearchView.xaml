<UserControl x:Class="ex1.Views.ResearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ex1.Views"             
             mc:Ignorable="d" 
             Height="400"
             Width="600"       >
    <Grid Background="WhiteSmoke">
        <ListBox x:Name="listBox" Margin="10,0,466,0" Background="White" ItemsSource="{Binding VM_Features, Mode=OneWay}" SelectionChanged="listBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <oxy:Plot Title="{Binding VM_SelectedFeature}" TitleFontSize="10" Margin="155,20,237,233" Background="Transparent">
            <oxy:Plot.Series>
                <oxy:LineSeries ItemsSource="{Binding VM_FeaturePoints}"/>
            </oxy:Plot.Series>
        </oxy:Plot>

        <oxy:Plot Title="{Binding VM_CorrFeature}" TitleFontSize="10" Margin="375,20,17,233" Background="Transparent">
            <oxy:Plot.Series>
                <oxy:LineSeries ItemsSource="{Binding VM_SecondFeaturePoints}"/>
            </oxy:Plot.Series>
        </oxy:Plot>

        <!--<oxy:Plot x:Name="featuresPoints" Margin="156,179,156,10" Background="Transparent">
            <oxy:Plot.Series>
                <oxy:ScatterSeries ItemsSource="{Binding VM_CorrFeaturesPoints}" MarkerType="Circle"/>
            </oxy:Plot.Series>
        </oxy:Plot>-->

        <!--<oxy:PlotView Model="{Binding VM_Plot}" Margin="172,187,151,23" Background="Transparent"/>-->

        <Label Content="{Binding VM_SelectedFeature}" HorizontalAlignment="Left" Margin="546,219,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding VM_CorrFeature}" HorizontalAlignment="Left" Margin="527,322,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
