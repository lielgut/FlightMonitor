<UserControl x:Class="ex1.Views.ResearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ex1.Views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="657"            >
    <Grid Background="DarkGray">
        <ListBox x:Name="listBox" Margin="0,0,538,0" Background="FloralWhite" ItemsSource="{Binding VM_Features, Mode=TwoWay}" SelectionChanged="listBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!--<oxy:PlotView Model="{Binding VM_Plot}" Margin="295,192,39,26"/>-->
        <Label Content="{Binding VM_SelectedFeature}" HorizontalAlignment="Left" Margin="272,76,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
