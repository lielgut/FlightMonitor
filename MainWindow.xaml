<Window x:Class="ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex1"  
        xmlns:views="clr-namespace:ex1.Views"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="FlightStat" Height="auto" Width="auto"
        ResizeMode="NoResize" Visibility="Visible">
    
    <Grid Margin="10,10,10,10" Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <views:PlayerView x:Name="playerView" Grid.Row="1" Grid.ColumnSpan="2" Margin="2"/>

        <views:ResearchView x:Name="researchView" Grid.Row="0" Grid.Column="1" Margin="2"/>

        <views:DataView x:Name="dataView" Margin="2" />


    </Grid>


</Window>